{
  "1": {
    "type": "Alexa.Presentation.APL.RenderDocument",
    "version": "1.0",
    "theme": "dark",
    "mainTemplate": {
      "description": "Audio Tennis GUI",
      "parameters": [
        "payload"
      ],
      "items": [
        {
          "type": "Container",
          "width": "100%",
          "height": "100%",
          "alignItems": "center",
          "justifyContent": "center",
          "items": [
            {
              "type": "Image",
              "source": "${payload.templateData.backgroundImage}",
              "position": "absolute",
              "width": "100vw",
              "height": "100vh",
              "scale": "fill"
            },
            {
              "type": "Container",
              "width": "100%",
              "height": "100%",
              "alignItems": "center",
              "justifyContent": "center",
              "items": [
                {
                  "type": "Text",
                  "color": "#000000",
                  "text": "${payload.templateData.playerScore}",
                  "position": "absolute",
                  "right": "35%",
                  "fontSize": "32dp"
                },
                {
                  "type": "Text",
                  "color": "#000000",
                  "text": "${payload.templateData.enemyScore}",
                  "position": "absolute",
                  "left": "35%",
                  "fontSize": "32dp"
                }
              ]
            }
          ]
        }
      ]
    }
  }
}